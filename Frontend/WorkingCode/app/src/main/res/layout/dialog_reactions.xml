<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/reaction_dialog_background"
    android:elevation="4dp">

    <TextView
        android:id="@+id/thumbsUpReaction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="👍"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/thumbsDownReaction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="👎"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/heartReaction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="❤️"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/exclamationReaction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="❗"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/laughReaction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="😄"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout> 