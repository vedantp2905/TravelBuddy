<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/titleTextColor"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Password Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/titleTextColor"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/change_password_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/confirm_password_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/confirm_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:backgroundTint="@color/buttonBackground"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp"/>

        <!-- Email Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Email"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/titleTextColor"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/change_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/confirm_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm New Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/change_email_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Email"
            android:backgroundTint="@color/buttonBackground"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp"/>

        <!-- Newsletter Section -->
        <TextView
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Newsletter Preferences"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/titleTextColor"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/change_pass_unsub_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newsletter Preferences"
            android:backgroundTint="@color/buttonBackground"
            android:textColor="@color/buttonTextColor"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp"/>


        <!-- Danger Zone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danger Zone"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF0000"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/delete_account_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
